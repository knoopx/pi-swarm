{
  "name": "pi-swarm",
  "version": "0.1.0",
  "description": "Multi-agent orchestration for pi coding agents",
  "type": "module",
  "bin": {
    "pi-swarm": "./bin/pi-swarm.ts"
  },
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:frontend\"",
    "dev:server": "PI_SWARM_CWD=$PWD bun run --watch src/server.ts",
    "dev:frontend": "cd src/frontend && bun run dev",
    "build": "cd src/frontend && bun install && bun run build",
    "start": "bun run bin/pi-swarm.ts",
    "test": "bun test src/",
    "test:watch": "bun test src/ --watch",
    "postinstall": "[ -f dist/index.html ] || bun run build",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@elysiajs/static": "^1.2.0",
    "@mariozechner/pi-coding-agent": "latest",
    "elysia": "^1.2.25"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "bun-types": "^1.3.8",
    "concurrently": "^8.2.2",
    "eslint": "^10.0.0",
    "typescript-eslint": "^8.54.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knoopx/pi-swarm.git"
  },
  "keywords": [
    "ai",
    "agent",
    "swarm",
    "pi",
    "coding-assistant"
  ],
  "author": "knoopx",
  "license": "MIT"
}
